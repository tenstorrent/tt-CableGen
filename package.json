{
  "name": "cablegen-visualizer",
  "version": "1.0.0",
  "description": "CableGen Network Visualization Tool",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:html": "jest --coverage --coverageReporters=html",
    "test:coverage:all": "jest --coverage --coverageReporters=text --coverageReporters=html --coverageReporters=lcov",
    "lint": "eslint static/js/**/*.js",
    "lint:fix": "eslint static/js/**/*.js --fix",
    "format": "prettier --write \"static/js/**/*.js\"",
    "docs": "jsdoc -c jsdoc.json",
    "find-orphans": "node find-orphaned-code.js",
    "deps:graph": "madge --image deps.svg static/js",
    "deps:orphans": "madge --orphans --extensions js static/js",
    "deps:circular": "madge --circular --extensions js static/js"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@testing-library/dom": "^8.20.0",
    "babel-jest": "^26.6.3",
    "cytoscape": "^3.33.1",
    "eslint": "^7.32.0",
    "jest": "^26.6.3",
    "jest-environment-jsdom": "^26.6.2",
    "jsdoc": "^3.6.11",
    "madge": "^5.0.1",
    "prettier": "^2.8.8"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(cytoscape)/)"
    ],
    "collectCoverageFrom": [
      "static/js/**/*.js",
      "!static/js/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 75,
        "functions": 80,
        "lines": 80
      }
    }
  }
}